
page{
  font-size: 30rpx;
  color: #666;
}
.page-content{
  position: fixed;
  top: 0;
  right: 0;
  z-index: 1000;
  background: #fff;
  width: 640rpx;
  height: 100vh;
}
.page-list{
  height: calc(100vh - 100rpx);
}
.content__title{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  border-bottom: 1rpx solid #f5f5f5;
  color: #333;
}
.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: flex-start;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
  height: calc(100% - 180rpx);
}

.searchLetter view {
  margin-top: 8rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  padding: 20rpx 0;
}

.item_letter {
  display: flex;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 28rpx;
  color: #000;
}

.item_city {
  padding-left: 20rpx;
}

.hotcity-common {
  font-size: 28rpx;
  color: #000;
  padding-left: 30rpx;
}

.slectCity {
  border-color: #2ab4ff !important;
}

.slectCity view {
  color: #2ab4ff !important;
}

.weui-grid {
  float: left;
  width: 170rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  margin: 10rpx 12rpx;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
  background: #faf6f6;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 6rpx;
}
.weui-grid.active{
  color: #fff;
  background: #6887dd;
}

/* 遮罩 */
.page-bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  z-index: 999;
}