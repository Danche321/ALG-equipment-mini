page{
  font-size: 30rpx;
  color: #666;
}
.page-content{
  position: fixed;
  top: 0;
  right: 0;
  z-index: 1000;
  background: #fff;
  width: 580rpx;
  height: 100vh;
}
.content__title{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  border-bottom: 1rpx solid #f5f5f5;
  color: #333;
}
.content__scroll{
  height: calc(100% - 90rpx);
}
.item__first{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-left: 60rpx;
}
.item__first.active{
  color: #3669f8;
}
.item__children{
  background: #f5f5f5;
  font-size: 26rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding:  10rpx 20rpx;
}
.children__item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  margin: 14rpx;
}
.icon-checked{
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
  display: none;
}
.children__item.active{
  color: #3669f8;
}
.children__item.active .icon-checked{
  display: block;
}
/* 遮罩 */
.page-bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  z-index: 999;
}