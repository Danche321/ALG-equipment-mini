/* components/record.wxss */
.page-voice {
  display: flex;
  /* height: 60rpx; */
  justify-content: flex-end;
  align-items: flex-end;
  right: 30rpx;
  position: absolute;
}
.btn-voice {
  width: 240rpx;
  height: 70rpx;
  border-radius: 50rpx;
  background: #F1F1F1;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: unset;
  border: 1rpx solid rgba(217, 217, 217, 1);
}

.btn-voice-hover {
  background: #E1E1E1
}

.btn-voice::after {
  display: none;
}

.voice__text {
  font-size: 28rpx;
}

.voice__icon {
  width: 24rpx;
  height: 38rpx;
  margin-right: 20rpx;
}
.btn-listen-btn {
  width: 250rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 0;
  border-radius: 40rpx;
  border: 1rpx solid #3fa4fe;
  color: #3fa4fe;
  background: #FFF;
  font-size: 28rpx;
  line-height: 80rpx;
}
.listen_icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.record-icon {
  width: 66rpx;
  height: 90rpx;
  margin-bottom:40rpx;
}

.record-countDown-box {
  position: fixed;
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 220rpx;
  background: rgba(0,0,0,0.6);
  border-radius: 10rpx;
  margin-left: -110rpx;
  margin-top: -110rpx;
  z-index: 99
}

.record-finish-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 30rpx;
}

.countDown-text {
  color: #FFF;
  font-size: 26rpx;
}
.record-finish-box {
  width: 510rpx;
  height: 390rpx;
  padding: 60rpx 45rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #FFF;
  flex-direction: column;
  border-radius: 5rpx;
  
}
.record-progress-icon{
  width: 100rpx;
  height: 100rpx;
}
.record-shadow {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.5);
  z-index: 99
}
.record-top {
  display: flex;
  flex-direction: column;
  align-items: center;

}
.listen-box-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 15rpx;
}

.btn-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 510rpx; 
}

.record-bottom-btn {
  width: 200rpx;
  height:70rpx;
  border-radius: 35rpx;
  background: #0f9aef;
  color: #FFF;
  border: 1rpx solid #0f9aef;
  line-height: 70rpx;
  font-size: 28rpx;
}
.record-bottom-btn::after{
  display: none
}
.record-bottom-confirm-btn {
  background: #FFF;
  color: #0f9aef;
}
