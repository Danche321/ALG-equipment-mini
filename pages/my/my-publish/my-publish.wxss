page {
  background-color: #fff;
}

.list-item {
  padding: 31rpx 32rpx 25rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.item__top {
  margin-bottom: 16rpx;
}

.img-box {
  width: 200rpx;
  height: 200rpx;
  border-radius: 6rpx;
  position: relative;
  margin-right: 23rpx;
  overflow: hidden;
}

.item__img {
  width: 100%;
  height: 100%;
}

.item__right {
  line-height: 1;
  flex: 1;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.item__title {
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
}

.tag-box {
  font-size: 22rpx;
}

.item__tag {
  width: 104rpx;
  height: 37rpx;
  line-height: 37rpx;
  text-align: center;
  background: #f9f9f9;
  border-radius: 19rpx;
  margin-right: 20rpx;
  display: inline-block;
  color: rgba(51, 51, 51, 0.7);
}

.item__price {
  color: #fb4238;
  font-size: 48rpx;
}

.price__unit {
  font-size: 32rpx;
}

.item__num {
  color: rgba(51, 51, 51, 0.5);
  font-size: 24rpx;
  margin-right: 51rpx;
}

.item__btn {
  width: 129rpx;
  height: 48rpx;
  margin-left: 22rpx;
}

.icon-saleDown{
  position: absolute;
  width: 102rpx;
  height: 102rpx;
  top: 31rpx;
}

/* 下架样式 */

.item--disabled .item__title {
  color: rgba(51, 51, 51, 0.5);
}

.item--disabled .item__tag {
  background: rgba(249, 249, 249, 0.5);
  color: rgba(51, 51, 51, 0.5);
}

.item--disabled .item__price {
  color: rgba(251, 66, 56, 0.5);
}

.item--disabled .item__img {
  opacity: 0.5;
}

.item--disabled .item__num {
  color: rgba(51, 51, 51, 0.5);
}

.btn-publish {
  width: 129rpx;
  height: 47rpx;
  line-height: 47rpx;
  text-align: center;
  background: rgba(54, 105, 248, 1);
  border-radius: 24rpx;
  font-size:22rpx;
  color: #fff;
}
