page {
  background-color: #f5f5f5;
  font-size: 32rpx;
}

/* 头像 */

.page-avatar {
  background-color: #fff;
  padding: 52rpx 0 80rpx 0;
}

.avatar__content {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f5f5f5;
  margin: auto;
  position: relative;
}

.avatar__photo {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar__upload {
  height: 45rpx;
  line-height: 45rpx;
  width:167rpx;
  background: rgba(0, 0, 0, .5);
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
}

.upload__icon {
  width: 33rpx;
  height: 27rpx;
}

/* 基本信息 */

.page-base {
  background-color: #fff;
  padding: 0 30rpx 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.base__title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 64rpx;
}

.base-field {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
  height: 120rpx;
  line-height: 120rpx;
}

.field__label {
  font-size: 32rpx;
  color: #333;
}

.field__value {
  color:rgba(51,51,51,.7);
  text-align: right;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.field__value-input{}
.field__value-arrow{
  width: 11rpx;
  height: 19rpx;
  margin-left: 17rpx;
}
.field-signature{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding-top: 45rpx;
}
.field__value--signature{
  width: 500rpx;
}


.field__value--black {
}
/* 手机号 */
.page-mobile{
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}

.btn-publish {
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
  width: 700rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 8rpx;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 30rpx;
  font-size: 32rpx;
}