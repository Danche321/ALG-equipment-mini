page {
  background-color: #f5f5f5;
}

/* 头像 */

.page-avatar {
  background-color: #fff;
  padding: 52rpx 0 80rpx 0;
}

.avatar__content {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f5f5f5;
  margin: auto;
  position: relative;
}

.avatar__photo {
}

.avatar__upload {
  height: 45rpx;
  width:167rpx;
  background: rgba(0, 0, 0, .5);
  position: absolute;
  left: 0;
  bottom: 0;
}

.upload__icon {
}

/* 基本信息 */

.page-base {
  background-color: #fff;
  padding: 0 30rpx 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.base__title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 64rpx;
}

.base-field {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 45rpx 0;
}
.base-field:last-child{
  margin-bottom: 0;
}

.field__label {
  font-size: 32rpx;
  color: #333;
}

.field__value {
  color:rgba(51,51,51,.7);
}
.field-signature{
  align-items: flex-start;
}
.field__value--signature{
  width: 477rpx;
}


.field__value--black {
}
/* 手机号 */
.page-mobile{
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
}