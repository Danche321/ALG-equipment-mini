page{
  background: #f5f5f5;
  padding: 60rpx 30rpx 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.field__input{
  border-bottom: 1rpx solid rgb(82, 115, 206);
  padding-bottom: 20rpx;
  width: 100%;
}
.field__tip{
  font-size: 24rpx;
  margin-top: 30rpx;
  color: #888;
}
.page-saveBtn{
  width: 650rpx;
  margin: auto;
  margin-top: 60rpx;
  background: linear-gradient(to bottom, #5684fd, #366cf8);
  color: #fff;
}