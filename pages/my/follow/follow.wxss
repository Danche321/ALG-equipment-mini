page {
  background-color: #f5f5f5;
}

.list-item {
  background-color: #fff;
  padding: 28rpx 25rpx;
  margin-bottom: 18rpx;
  border-radius: 6rpx;
  margin: 18rpx 10rpx;
}

.item__img {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.item__nickname {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.item__num {
  font-weight: 500;
  color: rgba(51, 51, 51, 0.5);
  font-size: 24rpx;
  margin-top: 14rpx;
}

.item__btn {
  font-size: 22rpx;
}

.item__btn {
  height: 47rpx;
  padding: 0 25rpx;
  border-radius: 24rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.focus__add {
  font-size: 34rpx;
}

.btn--blue {
  background: linear-gradient(to right, #5684fd, #366cf8);
  color: #fff;
}

.btn--gray {
  border: 1rpx solid #D9D9D9;
  color:rgba(51,51,51,.5);
}
