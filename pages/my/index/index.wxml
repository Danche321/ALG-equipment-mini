<!-- 头部 -->
<view class="page__header">
  <view class="header__user f-flex-justBetween-alignCenter">
    <view class="f-flex-justStart-alignCenter">
      <image class="user__headimg" src="{{user.headimg||'../../../icons/my_head.png'}}"></image>
      <view class="user-block__info">
        <view class="user__nickname">{{user.nickname}}</view>
        <view class="user__desc f-ellipsis1">{{user.desc}}</view>
      </view>
    </view>
    <image class="user__homeIcon" src="../../../icons/my_home.png"></image>
  </view>
  <view class="header__total f-flex-justBetween-alignCenter">
    <view class="total-item f-border--right" bindtap="handleToFollow">
      <view class="total-item__value">{{total.follow}}</view>
      <view class="total-item__label">关注</view>
    </view>
    <view class="total-item f-border--right" bindtap="handleToFans">
      <view class="total-item__value">{{total.fans}}</view>
      <view class="total-item__label">粉丝</view>
    </view>
    <view class="total-item">
      <view class="total-item__value">{{total.visitor}}</view>
      <view class="total-item__label">累计访客</view>
    </view>
  </view>
</view>
<!-- 跳转卡片 -->
<view class="page__cards">
  <view bindtap='handleToPublish' class="card-item f-flex-justBetween-alignCenter">
    <view class='f-flex-justStart-alignCenter'>
      <image src="../../../icons/my_publish.png" class="card__icon"></image>
      <text class='card__label'>我的发布</text>
    </view>
    <text class="card__btn">去查看</text>
  </view>
  <view bindtap='handleToCollect' class="card-item f-flex-justBetween-alignCenter">
    <view class='f-flex-justStart-alignCenter'>
      <image src="../../../icons/my_collect.png" class="card__icon"></image>
      <text class='card__label'>我的收藏</text>
    </view>
    <text class="card__btn">去查看</text>
  </view>
  <view class="card-item f-flex-justBetween-alignCenter">
    <view class='f-flex-justStart-alignCenter'>
      <image src="../../../icons/my_dynamic.png" class="card__icon"></image>
      <view class='card__label card__label-dynamic'>
        <text>我的动态</text>
        <text class="label__add">+10</text>
      </view>
    </view>
    <text class="card__btn">去查看</text>
  </view>
</view>