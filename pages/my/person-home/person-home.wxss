page {
}

/* 头部 */

.page__header {
  height: 480rpx;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 2;
}

.header-bg {
  position: fixed;
  top: 0;
  left: 0;
  height: 480rpx;
  width: 100%;
  z-index: -1;
}

.header__back {
  width: 60rpx;
  height: 60rpx;
  padding: 30rpx;
  position: fixed;
  left: 0;
  opacity: 0.8;
}

.header__content {
  padding: 130rpx 32rpx 40rpx 37rpx;
  height: calc(100% - 50rpx);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content-userInfo {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 40rpx;
}

.userInfo-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 200rpx;
  justify-content: center;
}
.header__headimg {
  width: 146rpx;
  height: 146rpx;
  border-radius: 50%;
  /* background-color: #f5f5f5; */
  margin-right: 30rpx;
}

.nickName__wrap{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.header__nickname {
  font-size: 32rpx;
  font-weight: 500;
  width: 300rpx;
}

.header__desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.header__bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header__num {
  font-size: 24rpx;
}

.header__num-item {
  margin-right: 20rpx;
  padding-right: 20rpx;
  position: relative;
}

.header__num-item::after {
  content: '';
  display: inline-block;
  width: 2rpx;
  height: 28rpx;
  background-color: #fff;
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.header__num-item:last-child::after {
  display: none;
}

.header__location {
  font-size: 24rpx;
}

.header__location .location__icon {
  width: 17rpx;
  height: 23rpx;
  margin-right: 12rpx;
}

/* 发布列表 */

.page-publish {
  padding-top: 560rpx;
  height: calc(100vh - 560rpx);
  overflow-y: scroll;
}

.swiper-item, .swiper-box {
  height: calc(100vh - 560rpx);
  background: #f5f5f5;
}

.filter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 3rpx 8rpx 0 rgba(189, 193, 202, 0.3);
  position: fixed;
  width: 100%;
  top: 480rpx;
  z-index: 2;
  background: #fff;
}

.filter-item {
  width: 50%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #888;
  font-size: 30rpx;
}

.filter-item.active {
  position: relative;
  color: hsl(224, 48%, 60%);
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background-color: hsl(224, 48%, 60%);
}

.list-item {
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.img-box {
  width: 260rpx;
  height: 180rpx;
  border-radius: 6rpx;
  position: relative;
  margin-right: 23rpx;
  overflow: hidden;
}
.icon-play{
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 50%;
  opacity: .7;
}

.item__img {
  width: 100%;
  height: 100%;
}

.item__right {
  flex: 1;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width: 400rpx;
}

.item__title {
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
}

.price-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item__price {
  color: #fb4238;
  font-size: 30rpx;
}

.price__value {
  font-size: 38rpx;
}

.item_time {
  font-size: 24rpx;
  color: #888;
}

.sale-tag-box {
  font-size: 24rpx;
  margin-top: 14rpx;
  color: #888;
}
.item-bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.icon-saleDown {
  position: absolute;
  width: 102rpx;
  height: 102rpx;
  top: 31rpx;
  opacity: 1;
}

.item--disabled view {
  opacity: 0.8;
}

/* 空数据 */

.m-page-empty {
  height: calc(100vh - 615rpx);
  background: none;
}

/* 求购信息列表 */
.list-buy-item {
  padding: 0 30rpx;
  position: relative;
  background: #fff;
  margin: 20rpx 0;
}

.list-buy-item .item__top{
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.list-buy-item .title{
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.list-buy-item .price{
  color: #557ef0;
  font-weight: bold;
  font-size: 30rpx;
}
.list-buy-item .time{
  color: #999;
  font-size: 28rpx;
}
.list-buy-item .item__top-bottom{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-buy-item .item__bottom{
  padding: 20rpx 0;
}
.list-buy-item .bottom-filed{
  line-height: 50rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.list-buy-item .filed__key{
  color: #888;
  margin-right: 32rpx;
}
.list-buy-item .filed__value{
  color: #333;
}
.list-buy-item .filed__icon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.item__btn {
  font-size: 24rpx;
  height: 60rpx;
  border-radius: 40rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding: 0 40rpx;
}

.focus__add {
  font-size: 34rpx;
  margin-right: 10rpx;
}

.btn--blue {
  background: linear-gradient(to right, #6d7a9e, #455c86);
  color: #fff;
  border: 1rpx solid #6d7a9e;
}

.btn--gray {
  border: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

/* 店铺二维码 */
.canvas{
  width: 100%;
  height: 100%;
   position: fixed;
  left: 0;
  top: 999999rpx;     
  background-color: rgba(0,0,0,0.3)
}
 
.preview{
  position:fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  background-color:rgba(0,0,0,0.8);
  z-index: 2;
  text-align: center;
  display:flex; 
  flex-flow:column;
}
 
.preview image{
  width: 80%;
  height: 80%;
  margin: 10%;
  margin-bottom: 5%;
}
 
.preview button{
  margin:0 20rpx;
  border-radius:50px;
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  padding: 10rpx 20rpx;
  width: 400rpx;
}