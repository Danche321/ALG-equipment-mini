  height: 37rpx;
  line-height: 37rpx;
  text-align: center;
  background: #d6e1ff;
  border-radius: 19rpx;
  margin-right: 26rpx;
  display: inline-block;
  color: #3669f8;
  font-size: 22rpx;
}

.item-middle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item__call {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: #3979fd;
  border: 1rpx solid #3979fd;
  padding: 10rpx 28rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
}

.icon-call {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item-middle-num {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.icon-read {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.item__num {
  color: #888;
  font-size: 24rpx;
  margin-right: 51rpx;
}

.location {
  display: flex;
  align-content: center;
  justify-content: flex-end;
  color: #777;
  text-align: right;
  font-size: 24rpx;
}

.location .location__icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.item_time {
  color: #888;
  text-align: right;
}

.item-bottom {
  border-top: 1rpx solid #f5f5f5;
  padding: 20rpx 0;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}

.item__creator {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 26rpx;
}

.item__headimg {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}
