page {
  background-color: #f5f5f5;
}

.list-item {
  background-color: #fff;
  padding: 28rpx 25rpx;
  margin-bottom: 18rpx;
  border-radius: 6rpx;
  margin: 18rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.item__img {
  width: 95rpx;
  height: 95rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.item__nickname {
  font-size: 30prx;
  color: #333;
  font-weight: 500;
  width: 500rpx;
}

.item__num {
  font-weight: 500;
  color: rgba(51, 51, 51, 0.5);
  font-size: 24rpx;
  margin-top: 14rpx;
}

.item-content{
  flex: 1;
}
.item__bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.invite-time{
  font-size: 28rpx;
  color: #777;
}
