page {
  background-color: #f1f1f1;
}

.list-item {
  padding: 31rpx 32rpx 25rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
}
.item-top {
  position: relative;
  background: #fff;
  width: 100%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.img-box {
  width: 260rpx;
  height: 180rpx;
  border-radius: 6rpx;
  position: relative;
  margin-right: 23rpx;
  overflow: hidden;
}
.icon-play{
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 50%;
  opacity: .7;
}

.item__img {
  width: 100%;
  height: 100%;
}

.item__right {
  flex: 1;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width: 400rpx;
}

.item__title {
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
}

.price-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item__price {
  color: #fb4238;
  font-size: 30rpx;
}

.price__value {
  font-size: 38rpx;
}

.item_time {
  font-size: 24rpx;
  color: #888;
}

.tag-box {
  font-size: 24rpx;
  margin-top: 14rpx;
  color: #888;
}
.item-top__bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-bottom {
  margin-top: 25rpx;
  padding-top: 25rpx;
  border-top: 1rpx solid #f5f5f5;
}

.btn-collect {
  width: 180rpx;
  height: 58rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  border: 1rpx solid #D9D9D9;
  color:rgba(51,51,51,.5);
}
.btn-collect.active{
  border: 1rpx solid #f8c436;
  color: #f8c436;
}
.collect__icon {
  width: 25rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.collect__text {
  font-size: 24rpx;
}


.item__headimg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.item__nickname {
  font-size: 26rpx;
}
.icon-saleDown{
  position: absolute;
  width: 102rpx;
  height: 102rpx;
  top: 31rpx;
}
/* 下架样式 */

.item--disabled .item-top{
  opacity: 0.5;
}
