page {
  background-color: #f1f1f1;
}

.list-item {
  padding: 31rpx 32rpx 25rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
}

.item__headimg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.item__nickname {
  font-size: 26rpx;
}

.item__area {
  font-size: 24rpx;
  color: #919191;
}

.area__icon {
  width: 23rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.img-box {
  width: 200rpx;
  height: 200rpx;
  border-radius: 6rpx;
  position: relative;
  margin-right: 23rpx;
  overflow: hidden;
}

.item__img {
  width: 100%;
  height: 100%;
}

.item__right {
  line-height: 1;
  flex: 1;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.item__title {
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
}

.tag-box {
  font-size: 22rpx;
}

.item__tag {
  width: 104rpx;
  height: 37rpx;
  line-height: 37rpx;
  text-align: center;
  background: #f9f9f9;
  border-radius: 19rpx;
  margin-right: 20rpx;
  display: inline-block;
  color: rgba(51, 51, 51, 0.7);
}

.item__price {
  color: #fb4238;
  font-size: 32rpx;
}

.price__value {
  font-size: 48rpx;
}

.item-bottom {
  margin-top: 25rpx;
  padding-top: 25rpx;
  border-top: 1rpx solid #f5f5f5;
}

.btn-collect {
  width: 180rpx;
  height: 58rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  border: 1rpx solid #D9D9D9;
  color:rgba(51,51,51,.5);
}
.btn-collect.active{
  border: 1rpx solid #f8c436;
  color: #f8c436;
}
.collect__icon {
  width: 25rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.collect__text {
  font-size: 24rpx;
}

.icon-saleDown{
  position: absolute;
  width: 102rpx;
  height: 102rpx;
  top: 31rpx;
}
/* 下架样式 */

.item--disabled .item__top,.item--disabled .item__user{
  opacity: 0.5;
}
