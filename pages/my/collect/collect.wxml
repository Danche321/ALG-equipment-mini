<view class="list-item {{item.status===0?'item--disabled':''}}" wx:for="{{listData}}" wx:key="{{index}}">
  <view class="item__top f-flex-justBetween-alignStart">
    <view class="img-box">
      <image src="{{item.img||'../../../icons/demo/demo1.jpeg'}}" class="item__img" mode="aspectFill"></image>
    </view>
    <view class='item__right'>
      <view class="f-ellipsis2 item__title">{{item.title}}</view>
      <view class="tag-box">
        <text wx:for="{{item.tags}}" wx:key="{{index}}" class="item__tag">{{item}}</text>
      </view>
      <view class="f-flex-justBetween-alignCenter">
        <view class="item__price">
          <text class="price__unit">¥</text>{{item.price}}
        </view>
        <view class="item__area f-flex-justStart-alignCenter">
          <image class="area__icon" src="../../../icons/location.png"></image>
          <text class="area__text">{{item.user.area}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class='item-bottom f-flex-justBetween-alignCenter'>
    <view class="item__user f-flex-justStart-alignCenter">
      <image class="item__headimg" src="{{item.user.headimg||'../../../icons/demo/demo1.jpeg'}}"></image>
      <view class="f-align-center">
        <view class="item__nickname">{{item.user.nickname}}</view>
      </view>
    </view>
    <view wx:if="{{item.isCollect}}" class="btn-collect active f-flex-justCenter-alignCenter">
      <image class="collect__icon" src="../../../icons/collect--yellow.png"></image>
      <text class="collect__text">取消收藏</text>
    </view>
    <view wx:else class="btn-collect f-flex-justCenter-alignCenter">
      <image class="collect__icon " src="../../../icons/collect--gray.png "></image>
      <text class="collect__text">收藏</text>
    </view>
  </view>
  <image wx:if="{{item.status===0}}" src="../../../icons/sale--down.png" class="icon-saleDown"></image>
</view>