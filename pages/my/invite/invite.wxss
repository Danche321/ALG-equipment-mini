/* 背景图 */

.page-banner {
  position: relative;
}

.banner__rule {
  position: absolute;
  width: 139rpx;
  height: 36rpx;
  right: 6rpx;
  top: 14rpx;
}

.banner__bg {
  width: 750rpx;
  height: 580rpx;
}

/* 内容区 */

.page-content {
  margin: 0 12rpx;
  width: 726rpx;
  height: calc(100vh - 604rpx);
  padding: 30rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
  border-radius: 9px;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content__bg {
  width: 726rpx;
  height: calc(100vh - 604rpx);
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.title__left {
  font-size: 32rpx;
  color: #fff;
}

.title__right {
  font-size: 28rpx;
  color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.icon-arrow {
  width: 14rpx;
  height: 22rpx;
  margin-left: 13rpx;
}

/* 统计 */

.total {
  width: 686rpx;
  height: 167rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 5px 16px 0px rgba(67, 98, 255, 1);
  border-radius: 10px;
  margin-bottom: 56rpx;
  box-sizing: border-box;
  position: relative;
}

.total-item {
  width: 50%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.total-item__label {
  font-size: 28rpx;
  color: #999;
}

.total-item__value {
  color: #333;
  font-size: 56rpx;
  margin-top: 20rpx;
  line-height: 1;
}

.price__unit {
  font-size: 38rpx;
  margin-right: 10rpx;
}

.person__unit {
  font-size: 30rpx;
}

.total-split {
  width: 4rpx;
  height: 106rpx;
  background: #f5f5f5;
}

/* 按钮 */

.btn {
  display: flex;
  align-content: center;
  justify-content: space-between;
  padding: 0 124rpx;
}

.btn-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}
.btn-item::after{
  display: none;
}
.btn-item__icon {
  width: 92rpx;
  height: 92rpx;
  margin-bottom: 25rpx;
}

.btn-item__text {
  font-size: 28rpx;
  color: #fff;
}
