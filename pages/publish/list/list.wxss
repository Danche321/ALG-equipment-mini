page {
  font-size: 24rpx;
  color: #333;
  background-color: #f5f5f5;
}

/* 搜索 */
.page-search{
  width: 100%;
  padding: 20rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
}
.search-box {
  background-color: #f5f5f5;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 20rpx;
  width: 100%;
  height: 70rpx;
  font-size: 26rpx;
}

.icon-search{
  width: 24rpx;
  height: 22rpx;
  margin-right: 15rpx;
}
.search__input--gray{
  color: #999;
  width: calc(100% - 60rpx);
  text-align: left;
}
/* 筛选条件 */
.page-filter{
  width: 100%;
  background-color: #fff;
}
.page-filter-select {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  padding-left: 60rpx;
}
.filter-split{
  height: 30rpx;
  width: 1rpx;
  background: #ddd;
  margin: 0 50rpx;
}
.filter-item {
  position: relative;
  padding-right: 50rpx;
}
.filter-item.active{
  color: #3669f8;
}
.filter-item::after{
  content: '';
  display: inline-block;
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  border-width: 10rpx;
  border-color: rgba(124, 135, 161, 1);
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
}

.filter-item__arow {
  width: 20rpx;
  height: 13rpx;
  margin-left: 11rpx;
}

/* 筛选标签 */
.page-tags{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  background: #fff;
  padding: 10rpx 30rpx 0 30rpx;
}
.tag-item{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}
.icon-clear{
  width: 16rpx;
  height: 16rpx;
  margin-left: 10rpx;
}
/* 发布列表 */
.publish-box {
  padding: 0 32rpx 20rpx 32rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.publish-item {
  width: 334rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-weight: 500;
  border-radius: 10rpx;
}

.publish__content {
  padding: 26rpx 20rpx 20rpx 20rpx;
}

.publish-item .img {
  width: 100%;
  height: 236rpx;
  background: #e2eafe;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.publish-item .title {
  font-size: 28rpx;
  color: #000
}

.publish-item .voice {
  margin: 19rpx 0 24rpx 0;
  height: 57rpx;
  line-height: 55rpx;
  background: #F9F9F9;
  border: 1rpx solid #f1f1f1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: rgba(51, 51, 51, 0.7);
  box-sizing: border-box;
  min-width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.voice__icon{
  width: 22rpx;
  height: 31rpx;
}
.voice__text{
  margin-left: 20rpx;
}

.publish-item .price {
  color: #fb4238;
  font-size: 38rpx;
}

.publish-item .price .price__unit {
  font-size: 26rpx;
}

.publish-item .area {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.7);
}

.publish-item .user-info {
  margin-top: 18rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid #f2f2f2;
}

.publish-item .headimg {
  width: 60rpx;
  height: 60rpx;
  background: rgba(226, 226, 226, 1);
  border-radius: 50%;
  margin-right: 22rpx;
}

.publish-item .nickname {
  border-radius: 10px;
  font-size: 24rpx;
  width: 200rpx;
  color:#333;
}

.m-page-empty{
  height: calc(100vh - 500rpx);
  background: #f5f5f5;
}