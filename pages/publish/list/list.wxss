page {
  font-size: 24rpx;
  color: #333;
}

/* 头部 */

.header__statusBar {
  width: 100%;
  background-color: #3669f8;
  z-index: 999;
  position: fixed;
  top: 0;
}

.page-header {
  width: 100%;
  text-align: center;
  z-index: 2;
  background-color: #fff;
  position: relative;
  background: linear-gradient(#3669f8, #3f85fa);
}

.header__titleBar {
  position: fixed;
  background-color: #3369f8;
  width: 100%;
  z-index: 999;
}

.search-box {
  background-color: #fff;
  border-radius: 50rpx;
}

/* 筛选条件 */

.page-filter {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  padding-left: 37rpx;
}

.filter-item {
  margin-right: 74rpx;
}

.filter-item__arow {
  width: 20rpx;
  height: 13rpx;
  margin-left: 11rpx;
}

/* 发布列表 */

.page-publish {
  padding: 0 32rpx 20rpx 32rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.publish-item {
  width: 334rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-weight: 500;
}

.publish__content {
  padding: 26rpx 20rpx 20rpx 20rpx;
}

.publish-item .img {
  width: 100%;
  height: 236rpx;
  background: #e2eafe;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.publish-item .title {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.publish-item .voice {
  margin: 19rpx 0 24rpx 0;
  height: 57rpx;
  line-height: 55rpx;
  background: #f9f9f9;
  border: 2rpx solid #f1f1f1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: rgba(51, 51, 51, 0.7);
  box-sizing: border-box;
  min-width: 130rpx;
}

.publish-item .price {
  color: #fb4238;
  font-size: 38rpx;
}

.publish-item .price .price__unit {
  font-size: 26rpx;
}

.publish-item .area {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.7);
}

.publish-item .user-info {
  margin-top: 18rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid #f2f2f2;
}

.publish-item .headimg {
  width: 60rpx;
  height: 60rpx;
  background: rgba(226, 226, 226, 1);
  border-radius: 50%;
  margin-right: 22rpx;
}

.publish-item .nickname {
  border-radius: 10px;
  font-size: 24rpx;
  width: 200rpx;
  color: rgba(51, 51, 51, 1);
}
