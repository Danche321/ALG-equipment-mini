page {
  font-size: 24rpx;
  color: #333;
  background-color: #f5f5f5;
}

/* 发布列表 */
.publish-box {
  padding: 0 32rpx 20rpx 32rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.publish-item {
  width: 334rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-weight: 500;
  border-radius: 10rpx;
}

.publish__content {
  padding: 26rpx 20rpx 20rpx 20rpx;
}

.publish-item .img {
  width: 100%;
  height: 236rpx;
  background: #e2eafe;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.publish-item .title {
  font-size: 28rpx;
  color: #000
}

.publish-item .voice {
  margin: 19rpx 0 24rpx 0;
  height: 57rpx;
  line-height: 55rpx;
  background: #F9F9F9;
  border: 1rpx solid #f1f1f1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: rgba(51, 51, 51, 0.7);
  box-sizing: border-box;
  min-width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.voice__icon{
  width: 22rpx;
  height: 31rpx;
}
.voice__text{
  margin-left: 20rpx;
}

.publish-item .price {
  color: #fb4238;
  font-size: 38rpx;
}

.publish-item .price .price__unit {
  font-size: 26rpx;
}

.publish-item .area {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.7);
}

.publish-item .user-info {
  margin-top: 18rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid #f2f2f2;
}

.publish-item .headimg {
  width: 60rpx;
  height: 60rpx;
  background: rgba(226, 226, 226, 1);
  border-radius: 50%;
  margin-right: 22rpx;
}

.publish-item .nickname {
  border-radius: 10px;
  font-size: 24rpx;
  width: 200rpx;
  color:#333;
}

.m-page-empty{
  height: calc(100vh - 500rpx);
  background: #f5f5f5;
}