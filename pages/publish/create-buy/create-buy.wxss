page {
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.page-base {
  background-color: #fff;
  padding: 0 30rpx 20rpx 30rpx;
}

.input-title {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 30rpx 0;
}

.input-desc {
  width: 100%;
  font-size: 26rpx;
  padding: 30rpx 0;
  height: 160rpx;
}

/* 定位和电话 */
.page-contact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #707070;
  margin-top: 34rpx;
}
.contact-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}

.location {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 46rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 0 20rpx;
}

.location__text{
  max-width: 300rpx;
}

.mobile {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 46rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 0 20rpx;
}


/* 设备信息 */

.page-info {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.info__title {
  position: relative;
  padding-left: 23rpx;
  margin-bottom: 20rpx;
}

.info__title::before {
  content: '';
  display: inline-block;
  position: absolute;
  width: 10rpx;
  height: 33rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  border-radius: 2rpx;
}

.info-item {
  height: 78rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.info__value-input {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  text-align: right;
}

.info__arrow {
  width: 11rpx;
  height: 19rpx;
  margin-left: 14rpx;
}

.info-item-year {
  align-items: flex-start;
  justify-content: space-between;
  padding-top: 23rpx;
  height: auto;
  padding-bottom: 27rpx;
}

.info__value--year {
  flex: 1;
}

.tag-year {
  display: flex;
  justify-content: flex-end;
  flex-wrap: wrap;
}

.tag-year-item {
  width: 107rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 26px;
  border: 1rpx solid #d9d9d9;
  font-size: 22rpx;
  margin: 0 0 24rpx 26rpx;
}

.tag-year-item.active {
  background: linear-gradient(to right, #3c95fc, #3369f8);
  color: #fff;
  border: 1rpx solid #fff;
}

.other-year {
  color: #3669f8;
  font-size: 28rpx;
  text-align: right;
}

.btn-publish {
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  margin: 50rpx auto;
}
