page {
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.page-base {
  background-color: #fff;
  padding: 0 30rpx 20rpx 30rpx;
}

.input-title {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 30rpx 0;
}

.input-desc {
  width: 100%;
  font-size: 26rpx;
  padding: 30rpx 0;
  height: 160rpx;
}

/* 定位和电话 */

.page-contact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #707070;
  margin-top: 34rpx;
}

.contact-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}

.location {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 46rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 0 20rpx;
}

.location__text {
  max-width: 300rpx;
}

.mobile {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 46rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 0 20rpx;
}


/* 设备信息 */

.page-info {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.info__title {
  position: relative;
  padding-left: 23rpx;
  margin-bottom: 20rpx;
}

.info__title::before {
  content: '';
  display: inline-block;
  position: absolute;
  width: 10rpx;
  height: 33rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  border-radius: 2rpx;
}

.info-item {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.info__value-input {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  text-align: right;
}

.info__arrow {
  width: 11rpx;
  height: 19rpx;
  margin-left: 14rpx;
}

.info-item-year {
  align-items: flex-start;
  justify-content: space-between;
  padding-top: 23rpx;
  height: auto;
  padding-bottom: 27rpx;
}

.info__value--year {
  flex: 1;
}

.tag-year {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.tag-year-item {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 26px;
  border: 1rpx solid #d9d9d9;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.tag-year-item.active {
  background: linear-gradient(to right, #3c95fc, #3369f8);
  color: #fff;
  border: 1rpx solid #fff;
}

.other-year {
  color: #3669f8;
  font-size: 28rpx;
  text-align: right;
}

.btn-publish {
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  margin: 50rpx auto;
}

/* 修改手机号弹窗 */

.modal-bindMobile {
  z-index: 1000;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 15rpx;
  width: 550rpx;
}

.modal-title {
  font-size: 42rpx;
  text-align: center;
  padding-bottom: 40rpx;
}

.filed-cell {
  border-bottom: 1rpx solid #f5f5f5;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 34rpx;
}

.modal-input {
  line-height: 100rpx;
  height: 100rpx;
}

.modal-btns {
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-btns button {
  width: 42%;
  height: 90rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  border: none;
}
.modal-btns button::after{
  display: none;
}
.modal-btns .cancle {
  background-color: #f0f0f0;
  color: #666;
}

.modal-btns .confirm {
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
}

.modal-bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  z-index: 999;
}
