.page-list{
  padding: 30rpx 30rpx 0 30rpx;
  background: #fff;
  height: calc(100vh - 110rpx);
  box-sizing: border-box;
  overflow: scroll;
}
.item{
  margin-bottom: 30rpx;
}
.item:last-child{
  margin-bottom: 0;
}
.item__title{
  font-size: 30rpx;
  margin-bottom: 20rpx;
  color: #000;
}
.children-tag{
  font-size: 26rpx;
  background: #f5f5f5;
  color: #666;
  width: 30%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.children-tag.active{
  background: #5c81e6;
  color: #fff;
}
.btn-next{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  width: 100%;
  border-radius: 0;
  color: #888;
  background: #f5f5f5;
}
.btn-next.active{
  background: #5c81e6;
  color: #fff;
}
.btn-next::after{
  display: none;
}