page {
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.page-base {
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
}

.input-title {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 30rpx 0;
}

.input-desc {
  width: 100%;
  padding: 30rpx 0;
  height: 120rpx;
}

.page-voice {
  display: flex;
  height: 90rpx;
}

.btn-voice {
  width: 210rpx;
  height: 60rpx;
  border-radius: 50rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: unset;
  border: 1rpx solid rgba(217, 217, 217, 1);
  right: 30rpx;
  position: absolute;
}

.btn-voice::after {
  display: none;
}

.voice__text {
  margin-right: 12rpx;
}

.voice__icon {
  width: 17rpx;
  height: 27rpx;
}

/* 上传图片/视频 */

.page-upload {
  width: 100%;
  overflow-x: scroll;
  white-space: nowrap;
}
.upload-file-item {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  position: relative;
  margin: 17rpx;
  background: #f5f5f5;
  display: inline-block;
}
.upload-add-wrap{
  display: inline-block;
  margin: 17rpx;
  width: 140rpx;
  height: 140rpx;
  vertical-align: top;
}
.upload-add {
  width: 140rpx;
  height: 140rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  color: #bbb;
}

.upload-add__icon {
  font-size: 80rpx;
  line-height: 1;
}

.upload-add__text {
  font-size: 26rpx;
}

.upload-img {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
}

.video-cover {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
}

.cover-bg {
  width: 140rpx;
  height: 140rpx;
  background: rgba(0, 0, 0, 0.2);
}

.icon-play {
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.upload-video {
  background: rgba(0, 0, 0, 0.5);
}

.upload-del {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -14rpx;
  top: -14rpx;
}

/* 设备信息 */
.page-info {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.info__title {
  position: relative;
  padding-left: 23rpx;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}

.info__title::before {
  content: '';
  display: inline-block;
  position: absolute;
  width: 8rpx;
  height: 33rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  border-radius: 2rpx;
}

.info-item-column{
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
}

.filed-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  text-align: right;
}
.filed-right-unit{
  color: #333;
  font-size: 30rpx;
}
.icon-arrow-right{
  width: 11rpx;
  height: 19rpx;
  margin-left: 20rpx;
}

.tag{
  color: #999;
  background: #f1f1f1;
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 50rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 4rpx;
}
.tag.active{
  background: #5078e9;
  color: #fff; 
}
.btn-publish {
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  margin: 30rpx auto;
}

.required{
  position: relative;
  padding-left: 26rpx;
}

.required::before{
  content: '*';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  color: rgb(211, 92, 92);
  font-size: 36rpx;
}

