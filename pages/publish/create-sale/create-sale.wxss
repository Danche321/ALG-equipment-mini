page {
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.page-base {
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
}

.input-title {
  border-bottom: 1rpx solid #f5f5f5;
  padding: 30rpx 0;
}

.input-desc {
  width: 100%;
  padding: 30rpx 0;
  height: 120rpx;
}

.page-voice {
  display: flex;
  height: 90rpx;
}

.btn-voice {
  width: 210rpx;
  height: 60rpx;
  border-radius: 50rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: unset;
  border: 1rpx solid rgba(217, 217, 217, 1);
  right: 30rpx;
  position: absolute;
}

.btn-voice::after {
  display: none;
}

.voice__text {
  margin-right: 12rpx;
}

.voice__icon {
  width: 17rpx;
  height: 27rpx;
}

/* 上传图片/视频 */

.page-upload {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 20rpx;
}

.upload-file-item {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  position: relative;
  margin: 17rpx;
  background: #f5f5f5;
}

.upload-add {
  width: 140rpx;
  height: 140rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 17rpx;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  color: #bbb;
}

.upload-add__icon {
  font-size: 80rpx;
  line-height: 1;
}

.upload-add__text {
  font-size: 26rpx;
}

.upload-img {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
}

.video-cover {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
}

.cover-bg {
  width: 140rpx;
  height: 140rpx;
  background: rgba(0, 0, 0, 0.2);
}

.icon-play {
  width: 80rpx;
  height: 80rpx;
  z-index: 2;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.upload-video {
  background: rgba(0, 0, 0, 0.5);
}

.upload-del {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -14rpx;
  top: -14rpx;
}

/* 定位和电话 */

.page-contact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #707070;
  margin-top: 34rpx;
}

.contact-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}

.location {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 46rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 0 20rpx;
}

.location__text {
  max-width: 300rpx;
}

.mobile {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 46rpx;
  background: #f5f5f5;
  border-radius: 26rpx;
  padding: 0 20rpx;
}

/* 设备信息 */

.page-info {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.info__title {
  position: relative;
  padding-left: 23rpx;
  margin-bottom: 20rpx;
}

.info__title::before {
  content: '';
  display: inline-block;
  position: absolute;
  width: 10rpx;
  height: 33rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  border-radius: 2rpx;
}

.info-item {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.info__value-input {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  text-align: right;
  min-width: 250rpx;
}

.price-unit {
  margin-left: 14rpx;
  font-weight: bold;
}

.btn-publish {
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 8rpx;
  margin: 30rpx auto;
}

/* 修改手机号弹窗 */

.modal-bindMobile {
  z-index: 1000;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 15rpx;
  width: 550rpx;
}

.modal-title {
  font-size: 42rpx;
  text-align: center;
  padding-bottom: 40rpx;
}

.filed-cell {
  border-bottom: 1rpx solid #f5f5f5;
  line-height: 100rpx;
  height: 100rpx;
  font-size: 34rpx;
}

.modal-input {
  line-height: 100rpx;
  height: 100rpx;
}

.modal-btns {
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-btns button {
  width: 42%;
  height: 90rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  border: none;
}

.modal-btns button::after {
  display: none;
}

.modal-btns .cancle {
  background-color: #f0f0f0;
  color: #666;
}

.modal-btns .confirm {
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
}

.modal-bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  z-index: 999;
}

.required{
  position: relative;
  padding-left: 26rpx;
}

.required::before{
  content: '*';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  color: rgb(211, 92, 92);
  font-size: 30rpx;
}
