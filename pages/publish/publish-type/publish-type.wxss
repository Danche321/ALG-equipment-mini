page {
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100vh;
}

.item {
  display: flex;
  align-content: space-between;
  align-items: center;
  width: 600rpx;
  margin: 40rpx auto;
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
}

.item__icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.item__text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item__title {
  font-size: 40rpx;
}

.item__desc {
  font-size: 30rpx;
}
