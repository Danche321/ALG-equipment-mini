page {
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100vh;
}

.item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 700rpx;
  color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin: 50rpx 0;
}

.item__icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.item__text {
  display: flex;
  flex-direction: column;
  min-width: 400rpx;
}

.item__title {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.item__desc {
  font-size: 28rpx;
}

.item-sale .item__title{
  color: #3369f8;
}

.item-sale .item__desc {
  color: #6d85c9;
}


.item-buy .item__title{
  color: #f99733;
}

.item-buy .item__desc {
  color: #fabe56;
}
