page {
  background: #f5f5f5;
  color: #333;
  font-size: 30rpx;
}

.page-section{
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.page-title{
  padding:  20rpx 0;
  color: #000;
  font-size: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.create-time{
  color: #888;
  font-size: 28rpx;
}
.filed-cell{
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.filed__key{
  color: #888;
  width: 180rpx;
}
.filed__value{
  color: #333;
}
.filed__remark{
  padding:  20rpx 0;
}
.other{
  margin-right: 40rpx;
}
/* 底部 */
.page-footer {
  background-color: #fff;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #999;
}

.footer-connect {
  color: #fff;
  width: 380rpx;
  height: 65rpx;
  line-height: 65rpx;
  background: linear-gradient(to right, #349bf8, #3369f8);
  box-shadow: 0 3rpx 8rpx 0 rgba(54, 106, 248, 0.3);
  border-radius: 33rpx;
  text-align: center;
  margin-right: 38rpx;
  font-size: 32rpx;
}

.connect__icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.handle__item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0;
  background: none;
  font-size: 30rpx;
  border: none;
  color: #888;
  margin: 0;
}
.handle__item::after{
  display: none;
}

.footer-handles {
  flex: 1;
}

.item__icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.item__icon-share{
  width: 38rpx;
  height: 38rpx;
}

/* 留言 */

.page-takeMsg {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  height: 120rpx;
  box-sizing: border-box;
}

.takeMsg__input {
  flex: 1;
  background-color: #fff;
  height: 80rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  align-self: center;
  box-sizing: border-box;
}

.takeMsg__send {
  width: 140rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.takeMsg__send-active {
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  color: #fff;
}

/* 空留言展示 */
.message-empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin: 30rpx 0;
  color: #bbb;
  font-size: 30rpx;
}
.btn-new{
  width: 180rpx;
  height: 70rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  background: #349bf8;
  border: none;
  color: #fff;
  margin-top: 20rpx;
}
.btn-new::after{
  display: none;
}

.has-down{
  min-width: 100vw;
  min-height: 100vh;
  box-sizing: border-box;
  opacity: 0.7;
}
.icon-saleDown{
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 200rpx;
  height: 200rpx;
  opacity: 0.7;
}


/* 二维码 */
.canvas{
  width: 100%;
  height: 100%;
   position: fixed;
  left: 0;
  top: 999999rpx;     
  background-color: rgba(0,0,0,0.3)
}
 
.preview{
  position:fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  background-color:rgba(0,0,0,0.8);
  z-index: 2;
  text-align: center;
  display:flex; 
  flex-flow:column;
}
 
.preview image{
  width: 80%;
  height: 80%;
  margin: 10%;
  margin-bottom: 5%;
}
 
.preview button{
  margin:0 20rpx;
  border-radius:50px;
  background: linear-gradient(to right bottom, #3fa4fe, #3369f8);
  padding: 10rpx 20rpx;
  width: 400rpx;
}