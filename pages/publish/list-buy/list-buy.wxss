page {
  background-color: #f5f5f5;
}
.m-page-filter{
  margin-top: 0;
  top: 0;
  position: fixed;
  z-index: 2;
}
.page-body{
  height: 100vh;
  box-sizing: border-box;
  position: relative;
}
.page-body .m-page-empty{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: auto;
}
/* 发布列表 */
.publish-box {
  background-color: #f5f5f5;
}

.list-item {
  padding: 0 30rpx;
  position: relative;
  background: #fff;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}
.item__top{
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.title{
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.price{
  color: #557ef0;
  font-weight: bold;
  font-size: 30rpx;
}
.time{
  color: #999;
  font-size: 28rpx;
}
.item__top-bottom{
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item__bottom{
  padding: 20rpx 0;
}
.bottom-filed{
  line-height: 50rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.filed__key{
  color: #888;
  margin-right: 32rpx;
}
.filed__value{
  color: #333;
}
.filed__icon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.m-page-empty{
  height: calc(100vh - 500rpx);
  background: #f5f5f5;
}