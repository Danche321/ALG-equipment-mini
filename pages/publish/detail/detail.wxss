.page-listen{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.listen__voice {
  margin: 19rpx 0 24rpx 0;
  height: 57rpx;
  line-height: 55rpx;
  background: #F9F9F9;
  border: 1rpx solid #f1f1f1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: rgba(51, 51, 51, 0.7);
  box-sizing: border-box;
  min-width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 300rpx;
}
.voice__icon{
  width: 22rpx;
  height: 31rpx;
}
.voice__text{
  margin-left: 20rpx;
}

.num {
  font-size: 28rpx;
  color: #707070;
  display: flex;
  justify-content: flex-end;
}

/* 留言 */

.page-message {
  padding: 22rpx 30rpx;
  background-color: #fff;
  margin-bottom: 14rpx;
}

.page-section-title {
  position: relative;
  font-size: 32rpx;
  padding-left: 28rpx;
  margin-bottom: 24rpx;
  color: #333;
  font-weight: bold;
}

.page-section-title::before {
  content: '';
  position: absolute;
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  display: inline-block;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 10rpx;
  height: 33rpx;
}

.message-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f2f7;
}

.message-item:last-child {
  border-bottom: none;
}

.message__headimg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 26rpx;
  background: #f5f5f5;
}

.message__nickname {
  font-size: 28rpx;
}

.message__time {
  color: rgba(51, 51, 51, 0.7);
  font-size: 24rpx;
}

.message-bottom {
  margin-left: 94rpx;
}

.message__content {
  padding: 12rpx 0 30rpx 0;
  font-size: 26rpx;
}

.message-child {
  background: #f5f5f5;
  padding: 20rpx 20rpx 0 20rpx;
  border-radius: 4rpx;
  position: relative;
  border-bottom: 1rpx solid #f1f2f7;
}

.child__headimg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 26rpx;
  background: #fff;
}

.child__nickname {
  font-size: 28rpx;
}

.child__time {
  color: rgba(51, 51, 51, 0.7);
  font-size: 24rpx;
  position: absolute;
  top: 18rpx;
  right: 26rpx;
}

.child__toName {
  color: #333;
}

.child__content {
  padding-left: 96rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 33rpx;
  padding-bottom: 20rpx;
}

/* 底部 */

.page-footer {
  background-color: #fff;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #999;
  border-top: 1rpx solid #f5f5f5;
}

.footer-connect {
  color: #fff;
  width: 300rpx;
  height: 65rpx;
  line-height: 65rpx;
  background: linear-gradient(to right, #349bf8, #3369f8);
  box-shadow: 0 3rpx 8rpx 0 rgba(54, 106, 248, 0.3);
  border-radius: 33rpx;
  text-align: center;
  margin-right: 40rpx;
  font-size: 32rpx;
}

.connect__icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.handle__item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0;
  background: none;
  font-size: 30rpx;
  border: none;
  color: #888;
  margin: 0;
}
.handle__item::after{
  display: none;
}

.footer-handles {
  flex: 1;
}

.item__icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.item__icon-share{
  width: 38rpx;
  height: 38rpx;
}

/* 留言 */

.page-takeMsg {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  height: 120rpx;
  box-sizing: border-box;
}

.takeMsg__input {
  flex: 1;
  background-color: #fff;
  height: 80rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  align-self: center;
  box-sizing: border-box;
}

.takeMsg__send {
  width: 140rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.takeMsg__send-active {
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  color: #fff;
}

/* 空留言展示 */
.message-empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin: 30rpx 0;
  color: #bbb;
  font-size: 30rpx;
}
.btn-new{
  width: 180rpx;
  height: 70rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  background: #349bf8;
  border: none;
  color: #fff;
  margin-top: 20rpx;
}
.btn-new::after{
  display: none;
}

.has-down{
  min-width: 100vw;
  min-height: 100vh;
  box-sizing: border-box;
  opacity: 0.7;
}
.icon-saleDown{
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 200rpx;
  height: 200rpx;
  opacity: 0.8;
}

.page-info{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 14rpx;
}

.info-item{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.info-item__value{
  font-size: 28rpx;
}

.info-item__key{
  color: #999;
  font-size: 26rpx;
  margin-top: 10rpx;
}

/* 基本信息 */
.page-base{
  padding: 20rpx 30rpx;
  background: #fff;
  font-size: 29rpx;
  margin-bottom: 14rpx;
}
.base-list-item{
  height: 60rpx;
  line-height: 60rpx;
}
.list-item__key{
  color: #999;
  width: 140rpx;
  display: inline-block;
}
