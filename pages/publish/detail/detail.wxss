page {
  background: #f5f5f5;
  color: #333;
  padding-bottom: 96rpx;
}

/* 轮播 */

swiper {
  height: 420rpx;
  position: relative;
}

.swiper-item {
  width: 100%;
  height: 420rpx;
}

.swiper-indicator {
  position: absolute;
  color: #fff;
  width: 90rpx;
  height: 40prx;
  line-height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  right: 35rpx;
  top: 40rpx;
  text-align: center;
  font-size: 30rpx;
  z-index: 2;
}

/* 头部信息 */

.page-header {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 14rpx;
}
.page-header__userInfo{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  color: #ff2c40;
  font-size: 32rpx;
}

.price__num {
  font-size: 44rpx;
}

.header__user {
  width: 220rpx;
  background: linear-gradient(to right, #3fa4fe, #3369f8);
  height: 80rpx;
  padding: 0 14rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  position: absolute;
  right: 0;
}

.header__user__headimg {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.header__user__nickname {
  font-size: 24rpx;
  color: #fff;
  flex: 1;
}

.title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.header-bottom {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #777;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
/* 描述 */

.page-desc {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 14rpx;
}

.desc {
  font-size: 28rpx;
}

.listen {
  margin-bottom: 20rpx;
}

.listen__text {
  font-size: 26rpx;
  color: #333;
  margin-right: 18rpx;
}

