page {
  background: #f5f5f5;
  color: #333;
  padding-bottom: 96rpx;
}

/* 轮播 */

swiper {
  height: 420rpx;
  position: relative;
}

.swiper-item {
  width: 100%;
  height: 420rpx;
}

.swiper-indicator {
  position: absolute;
  color: #fff;
  width: 87rpx;
  height: 40prx;
  line-height: 40rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 20rpx;
  right: 35rpx;
  top: 358rpx;
  text-align: center;
  font-size: 30rpx;
  z-index: 222;
}

/* 头部信息 */

.page-header {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 18rpx;
}

.price {
  color: #ff2c40;
  font-size: 36rpx;
}

.price__num {
  font-size: 71rpx;
}

.header__user {
  background: linear-gradient(to right, #3fa4fe, #3369f8);
  height: 80rpx;
  padding: 0 14rpx;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  margin-right: -30rpx;
}

.header__user__headimg {
  width: 62rpx;
  height: 62rpx;
  margin-right: 18rpx;
}

.header__user__nickname {
  font-size: 24rpx;
  color: #fff;
}

.title {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  margin: 20rpx 0;
}

.tags {
  margin-bottom: 6rpx;
}

.tag-item {
  padding: 8rpx 21rpx;
  background-color: #d6e1ff;
  border-radius: 50rpx;
  color: #3669f8;
  font-size: 22rpx;
  margin-right: 20rpx;
}

/* 描述 */

.page-desc {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 18rpx;
}

.listen {
  margin-bottom: 20rpx;
}

.listen__text {
  font-size: 26rpx;
  color: #333;
  margin-right: 18rpx;
}

.listen__voice {
  width: 187rpx;
  height: 57rpx;
  line-height: 55rpx;
  background: #f9f9f9;
  border: 2rpx solid #d9d9d9;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: rgba(51, 51, 51, 0.7);
  box-sizing: border-box;
  display: inline-block;
}

.desc {
  font-size: 26rpx;
  color: #707070;
  margin-bottom: 52rpx;
  line-height: 43rpx;
}

.num {
  font-size: 28rpx;
  color: #707070;
  display: flex;
  justify-content: flex-end;
}

/* 留言 */

.page-message {
  padding: 22rpx 30rpx;
  background-color: #fff;
}

.message__total {
  position: relative;
  font-size: 32rpx;
  padding-left: 28rpx;
  margin-bottom: 24rpx;
}

.message__total::before {
  content: '';
  position: absolute;
  background: linear-gradient(to bottom, #3fa4fe, #3369f8);
  display: inline-block;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 10rpx;
  height: 33rpx;
}

.message-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f2f7;
}

.message-item:last-child {
  border-bottom: none;
}

.message__headimg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 26rpx;
}

.message__nickname {
  font-size: 28rpx;
}

.message__time {
  color: rgba(51, 51, 51, 0.7);
  font-size: 24rpx;
}

.message-bottom {
  margin-left: 94rpx;
}

.message__content {
  margin: 12rpx 0 30rpx 0;
  font-size: 26rpx;
}

.message-child {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 4rpx;
  position: relative;
  border-bottom: 1rpx solid #f1f2f7;
}

.child__headimg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 26rpx;
}

.child__nickname {
  font-size: 28rpx;
}

.child__time {
  color: rgba(51, 51, 51, 0.7);
  font-size: 24rpx;
  position: absolute;
  top: 18rpx;
  right: 26rpx;
}

.child__toName {
  color: #333;
}

.child__content {
  padding-left: 96rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 33rpx;
}

/* 底部 */

.page-footer {
  background-color: #fff;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #999;
}

.footer-connect {
  color: #fff;
  width: 279rpx;
  height: 65rpx;
  line-height: 65rpx;
  background: linear-gradient(to right, #349bf8, #3369f8);
  box-shadow: 0 3rpx 8rpx 0 rgba(54, 106, 248, 0.3);
  border-radius: 33rpx;
  text-align: center;
  margin-left: 50rpx;
  font-size: 32rpx;
}

.connect__icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.handle__item {
  display: flex;
  align-items: center;
}

.footer-handles {
  flex: 1;
}

.item__icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}
