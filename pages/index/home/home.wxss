page {
  font-size: 24rpx;
  color: #333;
}

/* 头部 */

.header__statusBar {
  width: 100%;
  background-color: #3669f8;
}

.page__header {
  width: 100%;
  background-color: #fff;
  background: #3669F8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  z-index: 999;
  box-sizing: border-box;
  padding:  20rpx 30rpx;
}

.search__input{
  color: #999;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: left;
  height: 70rpx;
  padding-left: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  width: 100%;
}
.icon-search{
  width: 24rpx;
  height: 22rpx;
  margin-right: 15rpx;
}
/* 轮播 */
.page-swpier{
  position: relative;
  height: 175rpx;
  border-radius: 0 0 5% 5%;
  background: #3669F8;
  padding-top: 110rpx;
}
.swiper-box {
  width: 686rpx;
  height: 251rpx;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.swiper-item {
  width: 686rpx;
  height: 251rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.slide-image {
  width: 686rpx;
  height: 251rpx;
  display: block;
  will-change: transform;
  z-index: 1;
  background-color: #f5f5f5;
}

.wx-swiper-dot {
  width: 11rpx !important;
  height: 11rpx !important;
  background: #fff !important;
  border-radius: 50%;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 28rpx !important;
  border-radius: 6rpx;
  background: #fff;
}

/* 分类 */
.swiper-category{
  margin-top: 110rpx;
  height: 340rpx;
}
.swiper-category .swiper-item{
  padding-bottom: 40rpx;
}
.swiper-category .wx-swiper-dot{
  background: #3669f8 !important;
}
.category-box {
  padding: 0 20rpx;
  background-color: #fff;
  font-size: 24rpx;
}

.category-item {
  text-align: center;
  width: 20%;
  margin-bottom: 30rpx;
}

.category-item image {
  width: 74rpx;
  height: 74rpx;
  background: #e1e9fe;
  margin-bottom: 12rpx;
  border-radius: 50%;
}

/* 发布列表 */

.publish-box {
  padding: 0 30rpx 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.list-item {
  padding: 30rpx 0;
  position: relative;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.img-box {
  width: 260rpx;
  height: 180rpx;
  border-radius: 6rpx;
  position: relative;
  margin-right: 23rpx;
  overflow: hidden;
}
.icon-play{
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius: 50%;
  opacity: .7;
}

.item__img {
  width: 100%;
  height: 100%;
}

.item__right {
  flex: 1;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width: 400rpx;
}

.item__title {
  font-size: 28rpx;
  color: #000;
  font-weight: bold;
}

.price-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item__price {
  color: #fb4238;
  font-size: 30rpx;
}

.price__value {
  font-size: 38rpx;
}

.item_time {
  font-size: 24rpx;
  color: #888;
}

.tag-box {
  font-size: 24rpx;
  margin-top: 14rpx;
  color: #888;
}
.item-bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.m-page-empty{
  height: 300rpx;
}
