page {
  font-size: 24rpx;
  color: #333;
}

/* 头部 */

.header__statusBar {
  width: 100%;
  background-color: #3669f8;
  z-index: 999;
  position: fixed;
  top: 0;
}

.page__header {
  width: 100%;
  text-align: center;
  z-index: 2;
  background-color: #fff;
  position: relative;
  border-radius: 0 0 5% 5%;
  background: linear-gradient(#3669f8, #3f85fa);
  height: 170rpx;
}

.header__titleBar {
  position: fixed;
  background-color: #3369f8;
  width: 100%;
  z-index: 999;
}

.search-box {
  background-color: #fff;
  border-radius: 50rpx;
}

.search__area {
  padding-left: 27rpx;
  position: relative;
  padding-right: 50rpx;
  display: inline-block;
  color: #7c87a1;
}

.search__area::after {
  content: '';
  display: inline-block;
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  border-width: 10rpx;
  border-color: rgba(124, 135, 161, 1);
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
}

.search__split {
  width: 2rpx;
  height: 23rpx;
  background-color: #7c87a1;
  display: inline-block;
}

/* 轮播 */

.swiper-box {
  width: 686rpx;
  height: 251rpx;
  margin: auto;
  padding-top: 39rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-item {
  width: 686rpx;
  height: 251rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.slide-image {
  width: 686rpx;
  height: 251rpx;
  display: block;
  will-change: transform;
  z-index: 1;
}

.wx-swiper-dot {
  width: 11rpx !important;
  height: 11rpx !important;
  background: #fff !important;
  border-radius: 50%;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 28rpx !important;
  border-radius: 6rpx;
  background: #fff;
}

/* 分类 */

.category-box {
  margin-top: 180rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.category-item {
  text-align: center;
  width: 20%;
  margin-bottom: 40rpx;
}

.category-item image {
  width: 74rpx;
  height: 74rpx;
  background: #e1e9fe;
  margin-bottom: 12rpx;
  border-radius: 50%;
}

/* 发布列表 */

.publish-box {
  padding: 0 32rpx 20rpx 32rpx;
  background-color: #f5f5f5;
}

.publish-item {
  width: 334rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-weight: 500;
}

.publish__content {
  padding: 26rpx 20rpx 20rpx 20rpx;
}

.publish-item .img {
  width: 100%;
  height: 236rpx;
  background: #e2eafe;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.publish-item .title {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.publish-item .voice {
  margin: 19rpx 0 24rpx 0;
  height: 57rpx;
  line-height: 55rpx;
  background: #F9F9F9;
  border: 2rpx solid #f1f1f1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: rgba(51, 51, 51, 0.7);
  box-sizing: border-box;
  min-width: 130rpx;
}

.publish-item .price {
  color: #fb4238;
  font-size: 38rpx;
}

.publish-item .price .price__unit {
  font-size: 26rpx;
}

.publish-item .area {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.7);
}

.publish-item .user-info {
  margin-top: 18rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid #f2f2f2;
}

.publish-item .headimg {
  width: 60rpx;
  height: 60rpx;
  background: rgba(226, 226, 226, 1);
  border-radius: 50%;
  margin-right: 22rpx;
}

.publish-item .nickname {
  border-radius: 10px;
  font-size: 24rpx;
  width: 200rpx;
  color:rgba(51,51,51,1);
}
