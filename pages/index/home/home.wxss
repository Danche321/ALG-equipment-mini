page {
  font-size: 24rpx;
  color: #333;
  padding-right: 100rpx;
}

/* 头部 */

.header__statusBar {
  width: 100%;
  background-color: #3669f8;
}

.page__header {
  width: 100%;
  background-color: #fff;
  background: #3669F8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  z-index: 999;
  box-sizing: border-box;
  padding:  20rpx 30rpx;
}

.search__input{
  color: #999;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: left;
  height: 70rpx;
  padding-left: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  width: 100%;
}
.icon-search{
  width: 24rpx;
  height: 22rpx;
  margin-right: 15rpx;
}
/* 轮播 */
.page-swpier{
  position: relative;
  height: 175rpx;
  border-radius: 0 0 5% 5%;
  background: #3669F8;
  padding-top: 110rpx;
}
.swiper-box {
  width: 686rpx;
  height: 251rpx;
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.swiper-item {
  width: 686rpx;
  height: 251rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.slide-image {
  width: 686rpx;
  height: 251rpx;
  display: block;
  will-change: transform;
  z-index: 1;
  background-color: #f5f5f5;
}

.wx-swiper-dot {
  width: 11rpx !important;
  height: 11rpx !important;
  background: #fff !important;
  border-radius: 50%;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 28rpx !important;
  border-radius: 6rpx;
  background: #fff;
}

/* 分类 */
.swiper-category{
  margin-top: 110rpx;
  height: 340rpx;
}
.swiper-category .swiper-item{
  padding-bottom: 40rpx;
}
.swiper-category .wx-swiper-dot{
  background: #3669f8 !important;
}
.category-box {
  padding: 0 20rpx;
  background-color: #fff;
  font-size: 24rpx;
}

.category-item {
  text-align: center;
  width: 20%;
  margin-bottom: 30rpx;
}

.category-item image {
  width: 74rpx;
  height: 74rpx;
  background: #e1e9fe;
  margin-bottom: 12rpx;
  border-radius: 50%;
}

/* 发布列表 */

.publish-box {
  padding: 0 32rpx 20rpx 32rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.publish-item {
  width: 334rpx;
  background-color: #fff;
  margin-top: 20rpx;
  font-weight: 500;
  border-radius: 10rpx;
}

.publish__content {
  padding: 26rpx 20rpx 20rpx 20rpx;
}

.publish-item .img {
  width: 100%;
  height: 236rpx;
  background: #e2eafe;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.publish-item .title {
  font-size: 28rpx;
  color: #000
}

.publish-item .voice {
  margin: 19rpx 0 24rpx 0;
  height: 57rpx;
  line-height: 55rpx;
  background: #F9F9F9;
  border: 1rpx solid #f1f1f1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: rgba(51, 51, 51, 0.7);
  box-sizing: border-box;
  min-width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.voice__icon{
  width: 22rpx;
  height: 31rpx;
}
.voice__text{
  margin-left: 20rpx;
}

.publish-item .price {
  color: #fb4238;
  font-size: 38rpx;
}

.publish-item .price .price__unit {
  font-size: 26rpx;
}

.publish-item .area {
  font-size: 22rpx;
  color: rgba(51, 51, 51, 0.7);
}

.publish-item .user-info {
  margin-top: 18rpx;
  padding-top: 18rpx;
  border-top: 1rpx solid #f2f2f2;
}

.publish-item .headimg {
  width: 60rpx;
  height: 60rpx;
  background: rgba(226, 226, 226, 1);
  border-radius: 50%;
  margin-right: 22rpx;
}

.publish-item .nickname {
  border-radius: 10px;
  font-size: 24rpx;
  width: 200rpx;
  color:#333;
}
