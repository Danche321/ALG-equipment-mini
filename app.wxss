/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.f-flex-justStart-alignStart {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.f-flex-justBetween-alignStart {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.f-flex-justBetween-alignCenter {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.f-flex-justStart-alignCenter {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.f-flex-justCenter-alignCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}

.f-flex-justStart-wrap {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.f-flex-justBetween-wrap {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.f-ellipsis1 {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.f-ellipsis2 {
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.f-border--right {
  border-right: 1rpx solid rgba(245, 246, 248, 1);
}

.f-align-center {
  text-align: center;
}

.f-ml40{
  margin-left: 40rpx;
}
.f-mr70{
  margin-right: 70rpx;
}
.m-page-empty{
  height: 100vh;
  background-color: #fff;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.empty__img{
  width: 196rpx;
  height: 128rpx;
}
.empty__text{
  font-size: 28rpx;
  color: #8a96a3;
  margin-top: 40rpx;
}


/* 搜索 */
.m-page-search{
  width: 100%;
  padding: 20rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 2;
}
.m-page-search .search-box {
  background-color: #f5f5f5;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 20rpx;
  width: 100%;
  height: 70rpx;
  font-size: 26rpx;
}

.m-page-search .icon-search{
  width: 24rpx;
  height: 22rpx;
  margin-right: 15rpx;
}
.m-page-search .search__input--gray{
  color: #999;
  width: calc(100% - 60rpx);
  text-align: left;
}
/* 筛选条件 */
.m-page-filter{
  width: 100%;
  background-color: #fff;
  margin-top: 110rpx;
}
.m-page-filter .page-filter-select {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  padding-left: 60rpx;
}
.m-page-filter .filter-split{
  height: 30rpx;
  width: 1rpx;
  background: #ddd;
  margin: 0 50rpx;
}
.m-page-filter .filter-item {
  position: relative;
  padding-right: 50rpx;
}
.m-page-filter .filter-item.active{
  color: #3669f8;
}
.m-page-filter .filter-item::after{
  content: '';
  display: inline-block;
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  border-width: 10rpx;
  border-color: rgba(124, 135, 161, 1);
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
}

.m-page-filter .filter-item__arow {
  width: 20rpx;
  height: 13rpx;
  margin-left: 11rpx;
}

/* 筛选标签 */
.m-page-filter .page-tags{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  background: #fff;
  padding: 10rpx 30rpx 0 30rpx;
}
.m-page-filter .tag-item{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}
.m-page-filter .icon-clear{
  width: 16rpx;
  height: 16rpx;
  margin-left: 10rpx;
}